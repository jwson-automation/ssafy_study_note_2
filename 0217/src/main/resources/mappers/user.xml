<mapper namespace="com.ssafy.ws.model.mapper.UserMapper">



	<select id="selectAll" resultType="Map">
		SELECT *
		FROM user
	</select>

	<select id="select" resultType="String">
		SELECT *
		FROM user
		WHERE id =
		'sonjungwoo9@gmail.com';
	</select>


	<insert id="insert">
		INSERT INTO user (id, name, pass)
		VALUES
		('sonjungwoo9@gmail.com', 'Son
		Jungwoo', 'password123');
	</insert>

	<update id="update">
		UPDATE user
		SET pass = 'newpassword123'
		WHERE id =
		'sonjungwoo9@gmail.com';
	</update>

	<delete id="delete">
		DELETE FROM user WHERE id = 'sonjungwoo9@gmail.com';
	</delete>

</mapper>



